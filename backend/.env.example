PORT=5000
NODE_ENV=development

# JWT Secret (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_here

# Default admin bootstrap (optional)
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_ALLOWED_ORIGINS=http://localhost:3000

# BestBuy API
BESTBUY_API_KEY=your_bestbuy_api_key_here

# External product import (ScraperAPI / ScrapingBee / Apify)
PRODUCT_SCRAPER_PROVIDER=scraperapi
SCRAPER_API_KEY=your_scraper_api_key_here
SCRAPER_API_BASE_URL=https://api.scraperapi.com
# Tip: Leave these unset and switch to "Free Datasets" in the admin panel to use DummyJSON/FakeStore without any keys.
# Optional: tweak provider-specific flags
# SCRAPER_API_RENDER=true
# SCRAPER_API_COUNTRY=us
# SCRAPINGBEE_RENDER_JS=false
# APIFY_ACTOR_WEBHOOK=https://api.apify.com/v2/actor-tasks/<taskId>/run-sync-get-dataset-items
# APIFY_TOKEN=your_apify_api_token

# PayPal Configuration
# Get credentials from: https://developer.paypal.com/dashboard/
# Use 'sandbox' for testing, 'live' for production
PAYPAL_CLIENT_ID=your_paypal_sandbox_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_sandbox_client_secret_here
PAYPAL_MODE=sandbox

# CORS & Frontend Configuration
# For development: http://localhost:3000
# For production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000
